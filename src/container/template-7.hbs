{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}


    <header class="header ">
        <div class="header_logo">
            {{#with header}}
            <a href="#" class="logo">{{brandName}}</a>
            {{/with}}
       
        </div>


        <nav class="header_nav ">
           <div class="nav_links">
            {{#with header}}
        {{#each links}}
      
        <a href="{{url}}" class="button header_link ">{{text}}</a>
       
         {{/each}}
        {{/with}}
       </div>
        </nav>
    </header>


    <div class="ad">
        <div class="ad_badg">
        <span class="ad_icon">Ad</span>
        </div>
       <div class="ad_info">
        <p class="ad_title">Best service to Boost your priority faster: www.example.com</p>
        
        <p class="ad_text">Users online: 10</p>
        </div>
    </div>

<div class="hero">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    <div class="hero_b">
        {{#with button}}
    <button type="{{url}}" class="hero_button">{{text}}</button>
      {{/with}}
   </div>
    {{/with}}
   
</div>


<div class="about">
    {{#with about}}
    <h2 class="about_title">{{heading}}</h2>
    <p class="about_info">{{info}}</p>
    {{/with}}
</div>


<div class="articles">
    <div class="articles_t">
      <h2 class="art_title">Our Articles</h2>
      <div class="articles_b">
       <a href="{{href}}" class="button articles_button">Read All</a>
      </div>
       </div>
   <div class="card_article">
    {{#each articles}}
    <div class="card_art">
      <img src="{{photo}}" alt="article_photo" class="photo_article" id="{{id}}">
     
      <h3 class="name_article">{{name}}</h3>
      <p class="description_article">{{description}}</p>
      <div class="card_article_button">
         <a href="{{href}}" class="button article_button">Read All</a>
         </div> 
         </div>
    {{/each}}
 <div class="new_article">
        <span class="isNew_article">New</span>
        </div>
    </div>
</div>
 
    <footer class="footer ">
        {{#with footer}}
          <div class="footer_info">
           {{#each pages}}
       <a href="{{path}}" class="footer_page">{{name}}</a>
          {{/each}}
          
           <div class="footer_cop">
          <span class="footer_copiright">{{copyright}}</span>
         </div>
          </div>
    {{/with}}
    </footer>


 
