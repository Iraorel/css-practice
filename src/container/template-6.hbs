{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}


    <header class="header ">
        <div class="">
       {{>logo}}
        </div>

        <nav class="header_nav ">
           <div class="header_nav_right">
             {{>nav list=header }}
             </div>
        </nav>
    </header>


    <main class="main">
        {{#with info}}
       <div class="main_info">
         <h1 class="info_title">{{title}}</h1>
         <p class="info_text">{{description}}</p>
       </div>
       {{/with}}

        {{#with form}}
        <form class="form">
           <div class="form_inputs_list">
                    {{#each inputs}}
                       <input type="{{type}}"  placeholder="{{placeholder}}" class="form_input" name="{{name}}"  id="form-input-{{id}}"/>
                    {{/each}}
                </div>

                <div class="form_checkbox">
                    <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                    <div></div>
                     <label for="{{checkbox.name}}" > {{checkbox.label}}</label>
                </div>
          <button type="submit" class="form_button">{{button}}</button>
          <p class="form_info">{{info}}</p>
          
        </form>
        {{/with}}
    </main>

    
      {{#with updates}}
        <div class="updates">
           
            <h2 class="updates_title">{{title}}</h2>
        
            {{#each list}}
            <div class="list">
                <div class="list_badge">
                 <span class="badge_up">32x32</span>
                 </div>
                 <div class="list_name">
                <strong class="list_nickname">{{nickname}}</strong>

                <p class="list_text">{{description}}</p>
               
            </div>
             </div>
            {{/each}}

            <a href="{{url}}" class="show_all">All updates</a>
        </div>
        {{/with}}

        {{#with expirience}}
     <div class="expiriences">
        <div class="expiriences_tb">
        <h2 class="expirience_title">{{title}}</h2>
        <div class="expirience_badge">
        <badge class="exp_badge">{{badge}}</badge>
        </div>
        </div>
        <div class="card_list">
        {{#each list}}

        <div class="card">
            <strong class="card_name">{{name}}</strong>
            <p class="card_details">{{details}}</p>
        </div>

        {{/each}}
        </div>
     </div>
     {{/with}}

    {{> divider}}
    <footer class="footer row">
        <div class="col-3">
            {{>logo}}
            <span class="footer_copiright"> © 2023</span>

        </div>
        {{#each footer}}
        <div class="col-3">
            <span class="footer_title">
            {{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}
    </footer>


 
