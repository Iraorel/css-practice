{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}


    <header class="header ">
        <div class="">
       {{>logo}}
        </div>

        <nav class="header_nav ">
           <div class="header_nav_right">
             {{>nav list=header }}
             </div>
        </nav>
    </header>

{{#with main}}
 <div class="main">
        <div class="main_img">
    <img src="{{image}}" alt="main image" class="main_image">
    </div>
     <div class="main_content">
    <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
  
 </div>
{{/with}}


 <div class="featured">
    {{#each featured}}
    {{>cardFeatured data=this}}
    {{/each}}

 </div>


  
<div class="actions">
    {{#each actions}}
   {{>actions data=this}}
    {{/each}}
</div>



    {{> divider}}
    <footer class="footer row">
        <div class="col-3">
            {{>logo}}
            <span class="footer_copiright"> © 2023</span>

        </div>
        {{#each footer}}
        <div class="col-3">
            <span class="footer_title">
            {{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}
    </footer>


 
